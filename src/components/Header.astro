---
import { Image } from "astro:assets";

import civiLogoWhite from "../assets/civi-logo-white.png";
import menuIcon from "../assets/nav-menu-icon.svg";
---

<nav class="bg-custom-black">
  <div
    class="flex h-12 items-center justify between mx-auto max-w-7xl px-6 lg:px-8"
  >
    <div class="items-center sm:hidden flex-1">
      <!-- Mobile menu button-->
      <button
        type="button"
        class="transition duration-300 relative inline-flex items-center justify-center p-2 mx-2 hover:rotate-[4deg]"
        aria-controls="mobile-menu"
        aria-expanded="false"
      >
        <Image
          src={menuIcon}
          class="min-w-6 mt-0.5"
          width="25"
          alt="navigation bar "
        />
      </button>
    </div>
    <Image
      class="self-center sm:justify-start"
      src={civiLogoWhite}
      alt="menu-icon"
      width="54"
    />
    <div class="hidden sm:flex flex-wrap justify-center mx-auto">
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
      <ul class="inline-flex items-center justify-evenly">
        <li>
          <a
            href="#"
            class="p-2 mx-2 text-[19px] font-medium text-white transition hover:duration-[400] hover:text-accent-light"
            >ראשי</a
          >
        </li>
        <li>
          <a
            href="#"
            class="p-2 mx-2 text-[19px] font-medium text-white transition hover:duration-[400] hover:text-accent-light"
            >אודות</a
          >
        </li>

        <li>
          <a
            href="#"
            class="p-2 mx-2 text-[19px] font-medium text-white transition hover:duration-[400] hover:text-accent-light"
            >יכולות</a
          >
        </li>
        <li>
          <a
            href="#"
            class="p-2 mx-2 text-[19px] font-medium text-white transition hover:duration-[400] hover:text-accent-light"
            >המלצות</a
          >
        </li>
      </ul>
      <ul class="inline-flex items-center justify-evenly">
        <li>
          <a
            href="#"
            class="p-2 mx-2 text-[19px] font-medium text-white transition hover:duration-[400] hover:text-accent-light"
            >Academy</a
          >
        </li>
        <li>
          <a
            href="#"
            class="p-2 mx-2 text-[19px] font-medium text-white transition hover:duration-[400] hover:text-accent-light"
            >בלוג</a
          >
        </li>
        <li>
          <a
            href="#"
            class="p-2 mx-2 text-[19px] font-medium text-white transition hover:duration-[400] hover:text-accent-light"
            aria-current="page">צור קשר</a
          >
        </li>
      </ul>
    </div>
    <div class="flex justify-center ms-1">
      <button
        class="transition duration-300 text-custom-black-2 px-[11px] py-1 font-semibold text-[16px] bg-white me-2 whitespace-nowrap hover:bg-accent-light hover:text-white"
        ><span>תיאום הדגמה</span>
      </button>
      <button
        class="transition duration-300 text-white px-[8px] py-0.5 font-semibold text-[16px] whitespace-nowrap hover:bg-accent-light border border-white"
        ><span class="outline-dashed outline-dashed-button outline-1">
          קבלת הצעת מחיר
        </span>
      </button>
    </div>
  </div>
</nav>
